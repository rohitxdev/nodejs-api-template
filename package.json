{
	"name": "nodejs-api-template",
	"version": "1.0.0",
	"description": "Node.js API server template with Fastify and TypeScript.",
	"repository": "https://github.com/rohitxdev/nodejs-api-template",
	"readme": "https://github.com/rohitxdev/nodejs-api-template/#readme",
	"bugs": {
		"url": "https://github.com/rohitxdev/nodejs-api-template/issues"
	},
	"author": "rohitxdev",
	"license": "GPL-3.0-only",
	"type": "module",
	"types": "./types",
	"main": "./dist/index.js",
	"scripts": {
		"dev": "yarn build:fast-unsafe && concurrently -r -k \"nodemon ./dist/bundle.js\" \"yarn build:fast-unsafe --watch\"",
		"build:fast-unsafe": "rm -rf ./dist && esbuild ./src/index.ts --bundle --format=esm --platform=node --packages=external --outfile=./dist/bundle.js",
		"build": "rm -rf ./dist && tsc",
		"start": "node ./dist/index.js",
		"lint": "eslint ./src",
		"lint:fix": "yarn lint --fix",
		"commit": "git cz",
		"commit:all": "git add ./ && yarn commit",
		"postinstall": "husky install",
		"install-deps": "yarn",
		"test": "yarn build && ava"
	},
	"config": {
		"commitizen": {
			"path": "git-cz"
		}
	},
	"dependencies": {
		"@fastify/accepts": "^4.1.0",
		"@fastify/cookie": "^8.3.0",
		"@fastify/cors": "^8.3.0",
		"@fastify/etag": "^4.2.0",
		"@fastify/formbody": "^7.4.0",
		"@fastify/helmet": "^10.1.1",
		"@fastify/multipart": "^7.6.0",
		"@fastify/rate-limit": "^8.0.0",
		"@fastify/static": "^6.10.1",
		"@fastify/swagger": "^8.9.0",
		"@fastify/swagger-ui": "^1.9.3",
		"@fastify/type-provider-json-schema-to-ts": "^2.2.2",
		"@fastify/under-pressure": "^8.3.0",
		"@fastify/view": "^7.4.1",
		"@fastify/websocket": "^8.1.0",
		"chalk": "^5.2.0",
		"dotenv": "^16.0.3",
		"fastify": "^4.17.0",
		"fastify-bcrypt": "^1.0.1",
		"handlebars": "^4.7.7",
		"http-status": "^1.6.2",
		"pino-pretty": "^10.0.0",
		"zod": "^3.21.4"
	},
	"devDependencies": {
		"@types/accepts": "^1.3.5",
		"@types/node": "^20.2.1",
		"@typescript-eslint/eslint-plugin": "^6.4.0",
		"@typescript-eslint/parser": "^6.4.0",
		"ava": "^5.3.1",
		"concurrently": "^8.2.1",
		"esbuild": "^0.19.4",
		"eslint": "^8.41.0",
		"eslint-config-prettier": "^8.8.0",
		"eslint-import-resolver-typescript": "^3.5.5",
		"eslint-plugin-import": "^2.27.5",
		"eslint-plugin-prettier": "^4.2.1",
		"eslint-plugin-simple-import-sort": "^10.0.0",
		"git-cz": "^4.9.0",
		"husky": "^8.0.3",
		"json-schema-to-ts": "^2.9.2",
		"json-schema-typed": "^8.0.1",
		"nodemon": "^2.0.22",
		"prettier": "^2.8.8",
		"typescript": "^5.0.4"
	}
}
